<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll_dish_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
      
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="0dp"
	        android:layout_marginRight="0dp"
	        android:orientation="horizontal" >
	
	        <ImageView
	        android:id="@+id/iv_dish_picture_large"
	        android:layout_width="120dp"
	        android:layout_height="120dp" />
	    
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:orientation="vertical" >
		
		        <TextView
		            android:id="@+id/tv_dish_description"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="14sp" />
		    </LinearLayout>
		    
		</LinearLayout>
	   
	   <View
	        android:layout_width="wrap_content"
	        android:layout_height="1dp"
	        android:background="#000000"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp" />
	   
	   <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	   
			   <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical" >
			        
			        <TextView
			            android:id="@+id/tv_dish_station"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginBottom="5dp"
			            android:textSize="12sp" />
			        
			        <TextView
			            android:id="@+id/tv_dish_cafe"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginBottom="5dp"
			            android:textSize="12sp" />
			       
			    </LinearLayout>
			   
				<LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical" 
			        android:layout_marginLeft="15dp">
			        
					    <RelativeLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent" >
				            
				            <TextView
					            android:id="@+id/tv_dish_attribute1"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:textSize="10sp" />
			            
				            <ImageView
						        android:id="@+id/iv_dish_attribute1"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toLeftOf="@id/tv_dish_attribute1"
						        android:layout_centerHorizontal="true"
						        />
				            
			            </RelativeLayout>
		
					    <RelativeLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent" >
				            
				            <TextView
					            android:id="@+id/tv_dish_attribute2"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:textSize="10sp" />
			            
				            <ImageView
						        android:id="@+id/iv_dish_attribute2"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toLeftOf="@id/tv_dish_attribute2"
						        android:layout_centerHorizontal="true"
						        />
				            
			            </RelativeLayout>
					    	        
					    <RelativeLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent" >
				            
				            <TextView
					            android:id="@+id/tv_dish_attribute3"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:textSize="10sp" />
			            
				            <ImageView
						        android:id="@+id/iv_dish_attribute3"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toLeftOf="@id/tv_dish_attribute3"
						        android:layout_centerHorizontal="true"
						        />
				            
			            </RelativeLayout>
			            
					    <RelativeLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent" >
				            
				            <TextView
					            android:id="@+id/tv_dish_attribute4"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:textSize="10sp" />
			            
				            <ImageView
						        android:id="@+id/iv_dish_attribute4"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toLeftOf="@id/tv_dish_attribute4"
						        android:layout_centerHorizontal="true"
						        />
				            
			            </RelativeLayout>
			            
					    <RelativeLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent" >
				            
				            <TextView
					            android:id="@+id/tv_dish_attribute5"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:textSize="10sp" />
			            
				            <ImageView
						        android:id="@+id/iv_dish_attribute5"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toLeftOf="@id/tv_dish_attribute5"
						        android:layout_centerHorizontal="true"
						        />
				            
			            </RelativeLayout>
			            
					    <RelativeLayout
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent" >
				            
				            <TextView
					            android:id="@+id/tv_dish_attribute6"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_alignParentRight="true"
					            android:textSize="10sp" />
			            
				            <ImageView
						        android:id="@+id/iv_dish_attribute6"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_toLeftOf="@id/tv_dish_attribute6"
						        android:layout_centerHorizontal="true"
						        />
				            
			            </RelativeLayout>	    			    			    			    
					    			    
		   		</LinearLayout>
		   		
			</LinearLayout>
    
    </LinearLayout>

</RelativeLayout>