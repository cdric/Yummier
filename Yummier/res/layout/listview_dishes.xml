<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/iv_dish_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="User&apos;s profile picture" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iv_dish_image"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
            <ImageView
		        android:id="@+id/iv_dish_attribute1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
            
             <ImageView
		        android:id="@+id/iv_dish_attribute2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
           
             <ImageView
		        android:id="@+id/iv_dish_attribute3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
          
             <ImageView
		        android:id="@+id/iv_dish_attribute4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
          
             <ImageView
		        android:id="@+id/iv_dish_attribute5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
          
             <ImageView
		        android:id="@+id/iv_dish_attribute6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
        
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>